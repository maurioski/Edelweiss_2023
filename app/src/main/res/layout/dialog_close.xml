<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/dialog_update"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/rounded_corners"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/dialogoupdate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:text="@string/app_name"
            android:textColor="@color/gnt_black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/do_you_want_to_exit_the_app"
            android:textSize="18sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/nocerrar"
            android:layout_width="0dp"
            android:layout_height="64dp"
            android:layout_weight="1"
            android:textColor="@color/gnt_white"
            android:background="@drawable/btn_drawable_left"
            android:text="NO" />
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@android:color/white" />

        <Button
            android:id="@+id/minimizar"
            android:layout_width="0dp"
            android:layout_height="64dp"
            android:layout_weight="1"
            android:textColor="@color/gnt_white"
            android:background="@drawable/btn_rect"
            android:text="MINIMIZAR" />
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@android:color/white" />

        <Button
            android:id="@+id/sicerrar"
            android:layout_width="0dp"
            android:layout_height="64dp"
            android:layout_weight="1"
            android:textColor="@color/gnt_white"
            android:background="@drawable/btn_drawable_right"
            android:text="SI" />

    </LinearLayout>
</LinearLayout>
